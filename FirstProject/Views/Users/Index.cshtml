@using MVCWebProject.ViewModels
@using MVCWebProject.ViewModels.Users
@model UsersListingDataViewModel
<h2>Users</h2>
<div class="row">
    <div class="col-md-4">
        <div class="input-group">
            <a class="btn btn-primary" href="@Url.Action("Create", "Users")" role="button">Create</a>
        </div>
    </div>
    <div class="col-md-4 col-md-offset-4">
        @using (Ajax.BeginForm("Index", new AjaxOptions { UpdateTargetId = "Listing" }))
        {
            <div class="input-group">
                <span class="input-group-btn">
                    <input type="submit" value="Go" class="btn btn-primary" />
                </span>
                <input type="text" name="searchString" class="form-control" placeholder="Search for..." />
            </div>
        }
    </div>
</div>
<p></p>
<div id="Listing">
    @Html.Partial("Listing", Model)
</div>
<div id="Modal" class="modal fade">
    <div id="Dialog" class="modal-dialog"></div>
</div>

<script type="text/javascript">
    function OnSuccess() {
        $("#Modal").modal('show');
    };
</script>