@using X.PagedList
@using X.PagedList.Mvc
@using MVCWebProject.ViewModels
@model IPagedList<UsersListingViewModel>
<table class = "table">
    <tr>
        <th>
            @Ajax.ActionLink("Name", "Index", new { sortOption = "Name" }, new AjaxOptions { UpdateTargetId = "Listing" })
        </th>
        <th>
            @Ajax.ActionLink("Phone", "Index", new { sortOption = "Phone" }, new AjaxOptions { UpdateTargetId = "Listing" })
        </th>
        <th>
            @Ajax.ActionLink("E-mail", "Index", new { sortOption = "Email" }, new AjaxOptions { UpdateTargetId = "Listing" })
        </th>
        <th>
            @Ajax.ActionLink("Title", "Index", new { sortOption = "Title" }, new AjaxOptions { UpdateTargetId = "Listing" })
        </th>
        <th>
            @Ajax.ActionLink("Country", "Index", new { sortOption = "Country" }, new AjaxOptions { UpdateTargetId = "Listing" })
        </th>
        <th>
            @Ajax.ActionLink("City", "Index", new { sortOption = "City" }, new AjaxOptions { UpdateTargetId = "Listing" })
        </th>
        <th>
            <p>Actions</p>
        </th>
    </tr>
    @foreach (var p in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => p.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => p.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => p.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => p.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => p.Country)

        </td>
        <td>
            @Html.DisplayFor(modelItem => p.City)
        </td>
        <td>
            @Html.ActionLink("Comments", "Comments", new { id = p.Id }, new { @class = "PopUp" }) |
            @Html.ActionLink("Edit", "Edit", new { id = p.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = p.Id }, new { @class = "PopUp" })
        </td>
    </tr>
    }
</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))